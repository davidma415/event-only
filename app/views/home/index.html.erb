
<p>
  <%= link_to 'View Locations', locations_path %>
</p>
<p>
  <%= link_to 'View Events', events_path %>
</p>

<h1>Locations</h1>
<% @locations.each do |current_location| %>
 <%= render 'locations/single_location', location: current_location %>
<% end %>

<h1>Events</h1>
<% @events.each do |event| %>
  <h3><%= event.name %></h3>
  <%= render 'events/event', event: event %>
<% end %>
